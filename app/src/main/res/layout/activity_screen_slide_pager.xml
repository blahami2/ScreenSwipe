<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.blahami2.training_swipeview.ScreenSlidePagerActivity">

    <!-- activity_screen_slide.xml -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/root_color_dark"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <cz.blahami2.training_swipeview.DotPageIndicatorView
            android:id="@+id/indicator"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:background="@color/root_color_dark"
            android:layout_centerInParent="true">

            <View
                android:id="@+id/indi_0"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top"
                android:background="@drawable/circle"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/indi_1"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top"
                android:background="@drawable/circle"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/indi_2"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top"
                android:background="@drawable/circle"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/indi_3"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top"
                android:background="@drawable/circle"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/indi_4"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top"
                android:background="@drawable/circle"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"/>

        </cz.blahami2.training_swipeview.DotPageIndicatorView>
    </RelativeLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
